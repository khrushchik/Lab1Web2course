@using Microsoft.AspNetCore.Identity
@model LABA1.ViewModel.ChangeRoleViewModel
@{
    ViewBag.Title = "Редактирование ролей";
}
<h2>Смена ролей для пользователя @Model.UserEmail</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" name="userId" value="@Model.UserId" />
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name<br />
            }
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
<img style="position: absolute; bottom:30px;right:15px; " src="~/css/fon.png" border="0" width=400px; />
